root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{ts,tsx,js,jsx,mjs,cjs}]
indent_size = 2

[*.{json,jsonc}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
indent_size = 2

[*.{sh,bash}]
indent_style = space
indent_size = 2
end_of_line = lf

[*.env*]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4
